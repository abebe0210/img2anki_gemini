# Google Cloud Platform設定
# あなたのGCPプロジェクトIDを記入してください
GCP_PROJECT_ID=your-gcp-project-id

# リージョン設定（必要に応じて変更）
GCP_LOCATION=asia-northeast1

# Geminiモデル名
GEMINI_MODEL=gemini-2.5-flash

# Google認証情報JSONファイルのパス
# 例: C:\Users\username\Downloads\service-account-key.json
# または相対パス: ./credentials/service-account-key.json
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Anki設定
ANKI_DECK_NAME=画像解説カード
ANKI_MODEL_ID=1607392319
ANKI_DECK_ID=2059400110

# 処理設定
# 画像フォルダのパス（デフォルト: ./img）
IMAGE_FOLDER=./img

# API制限対策用の待機時間（秒）
API_WAIT_TIME=1

# 最大リトライ回数
MAX_RETRY_COUNT=3

# バッチ処理設定
# バッチ処理を使用するかどうか（true/false）
USE_BATCH_PROCESSING=true

# バッチ処理を使用する最小画像数（10個以上でバッチ処理、50%コスト削減）
BATCH_THRESHOLD=10

# バッチ完了まで待機するか（false=手動処理推奨、true=自動待機）
BATCH_WAIT_FOR_COMPLETION=false

# バッチジョブ作成を同期的に行うか（true=作成完了まで待機、false=非同期作成）
BATCH_JOB_SYNC_CREATE=false
